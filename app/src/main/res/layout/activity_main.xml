<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/fondo2"
    tools:context="com.juanjosegallego.firebase1.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/firebase"/>
            <EditText
                android:id="@+id/id"
                android:inputType="number"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"
                android:hint="id del producto:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            <EditText
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/black"
                android:hint="Nombre producto:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="7sp"
                android:text="" />
            <EditText
                android:id="@+id/valor"
                android:inputType="number"
                android:layout_width="wrap_content"
                android:textColorHint="@color/black"
                android:layout_height="wrap_content"
                android:hint="Valor del producto:" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2">
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <Button
                    android:id="@+id/agregar"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:text="Agregar"/>
                <Button
                    android:id="@+id/cambiar"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:text="Modificar"/>
                <Button
                    android:id="@+id/buscar"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:text="Buscar"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <Button
                    android:id="@+id/eliminar"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:text="Eliminar"/>
                <Button
                    android:id="@+id/ver"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:text="Observar"/>
                <Button
                    android:id="@+id/limpiar"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:textSize="15sp"
                    android:text="Limpiar"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:background="@drawable/estilo">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            <TextView
                android:text="BASE DE DATOS"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Aqui va la info almacenada en Firebase"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
            <TextView
                android:id="@+id/basedatos"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="fill"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
